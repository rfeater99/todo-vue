= javascript_bundle_tag 'el_base'

#el_base
  %el-main
    %h2 Sign up
    %el-card
      = form_for(resource, as: resource_name, builder: ElFormBuilder, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .field
          %el-form-item{label: :Username}
            = f.el_input_field :username, type: :text, autofocus: true, autocomplete: 'username'
        .field
          %el-form-item{label: :Email}
            = f.el_input_field :email, type: :email, autofocus: true, autocomplete: 'email'
        .field
          %el-form-item{label: :Password}
            - if @minimum_password_length
              %em
                (#{@minimum_password_length} characters minimum)
            = f.el_input_field :password, type: :password, autocomplete: 'new-password'
        .field
          %el-form-item{label: :Password_confirmation}
            = f.el_input_field :password_confirmation, type: :password, autocomplete: 'new-password'
        .actions
          %el-form-item
            =f.el_submit 'Sign up', type: :primary, round: :round
    = render "devise/shared/links"
